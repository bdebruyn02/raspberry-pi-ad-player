{
  "name": "raspberry-pi-ad-player",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/bdebruyn02/raspberry-pi-ad-player#readme",
  "bugs": {
    "url": "https://github.com/bdebruyn02/raspberry-pi-ad-player/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bdebruyn02/raspberry-pi-ad-player.git"
  },
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "electron/main.js",
  "scripts": {
    "serve": "cd app && ng serve",
    "electron": "wait-on tcp:4200 && npx electron electron/main.js",
    "start": "concurrently -k \"npm:serve\" \"npm:electron\"",
    "build": "cd app && ng build --configuration production",
    "build:electron": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.bdebruyn.mediascheduler",
    "productName": "MediaScheduler",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "app/dist/app/browser/**/*"
    ],
    "extraResources": [
      {
        "from": "electron/",
        "to": "electron"
      }
    ],
    "afterPack": "./electron/main.js",
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility"
    }
  },
  "devDependencies": {
    "@electron/remote": "^2.1.3",
    "concurrently": "^9.2.1",
    "electron": "^38.2.2",
    "sqlite3": "^5.1.7",
    "wait-on": "^9.0.1"
  }
}
